{
    "type": "prestashop-module",
    "name": "lizy/prestashop",
    "description": "PrestaShop module Lizy payment",
    "homepage": "https://www.lyzi.io/",
    "license": "AFL-3.0",
    "authors": [
        {
            "name": "Lizy",
            "email": "contact@lyzi.fr"
        }
    ],
    "require": {
        "php": "^7.1 | ^8.0"
    },
    "config": {
        "preferred-install": "dist",
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "sort-packages": true,
        "prepend-autoloader": false
    },
    "autoload": {
        "classmap": [
            "controllers",
            "lizy.php"
        ],
        "psr-4": {
            "Lizy\\": "src/"
        }
    },
    "scripts": {
        "set-license-header": [
            "@php ./vendor/bin/header-stamp --license=\"assets/afl.txt\" --exclude=\".github,vendor\""
        ]
    },
    "require-dev": {
        "prestashop/php-dev-tools": "~3.0"
    },
    "author": "Lizy"
}
